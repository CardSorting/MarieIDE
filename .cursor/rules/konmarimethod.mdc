  const batchSize = 100
  let offset = 0
  
  while (true) {
    const batch = await db.query(
      'SELECT * FROM large_table LIMIT $1 OFFSET $2',
      [batchSize, offset]
    )
    
    if (batch.length === 0) break
    yield batch
